# Server
NODE_ENV=development
PORT=5000
SERVER_URL=https://your-domain.com

# Database
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=yourpassword
PG_DATABASE=bingo_game
MONGODB_URI=mongodb://localhost:27017/bingo_sessions

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
